vi .config/openbox/lubuntu-rc.xml
    <!-- Keybindings to toggle fullscreen -->
    <keybind key="A-F11">
      <action name="ToggleFullscreen"/>
    </keybind>
openbox --reconfigure



# PC Key                 MSX Key / Function
# ---------------------  ------------------

  L Control              <Control>
  R Control              <DeadKey>

  L Alt                  <Graph>
  R Alt                  <Code> / <Kana>

  L Super                <No>
  R Super                <Yes>

  F7                     <Select>
  F8                     <Stop>
  Insert                 <Insert>

# ---

  Control+F1             toggle grabinput
  Control+F2             toggle all trainer cheats
  Control+F3             toggle scale (1/2)

  Alt+F4 | Control+Pause quit emulator

  F6                     toggle osd keyboard

  Alt+F7                 quick loadstate (from 'quicksave' slot)
  Alt+F8                 quick savestate (to   'quicksave' slot)

  F9                     toggle throttle
  F10                    toggle console display
  F11                    toggle audio mute
  F12 | ALT+Enter        toggle full screen mode

    Shift+PrintScreen    capture doublesize raw screenshot
  Control+PrintScreen    capture scaled screenshot with osd

  PageUp                 backward 1 sec in time, using the reverse feature
  PageDown               forward  1 sec in time, using the reverse feature

  Menu                   toggle osd menu
  Pause                  pause emulation

